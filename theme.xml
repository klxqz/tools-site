    <settings>
        <setting var="main_code" control_type="text">
            <value></value>
            <name locale="en_US">
                <![CDATA[
                <script>
                    $(function(){
                        $('.p-title').closest('.field').addClass('custom-field');
                    });
                </script>
                <style>
                .field.custom-field .name{
                    float:none;width: auto;
                }
                .field.custom-field .value{
                    display:none;
                }
                .p-title{
                    font-weight: bold;color: #000;
                }
                .wa-theme-image-select{
                    max-width: 750px;
                }
                .wa-theme-image-select a img{
                    height: 100px;width: 100px;
                }
                </style>
                <p class="p-title"></p>	
                ]]>
            </name>
            <name locale="ru_RU">
                <![CDATA[
                <script>
                    $(function(){
                        $('.p-title').closest('.field').addClass('custom-field');
                    });
                </script>
                <style>
